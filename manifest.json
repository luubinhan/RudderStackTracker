{
  "manifest_version": 3,
  "name": "RudderStack Tracker",
  "version": "1.0",
  "description": "Captures and displays the payload for mailgun-dataplane.rudderstack.com/v1/track.",
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}